.body-container {
  background-color:#c1d5e2;
  width: 100vw;
  height: 100vh;
}

.word-top {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 200rpx;
  background-color: none;
  color: #fff;
  font-weight: bold;
  font-size: 48rpx;
  padding-bottom: 40rpx;
}

.bg-container {
  background-color: none;
}

.bg {
  background-color: none;
  display: flex;
  justify-content: center;
  align-content: center;
}

.bg image {
  display: flex;
  background-color:none;
  width: 40%;
  background-size: cover;
  background-repeat: no-repeat;
  padding: 40rpx;
}

.water-btn {
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 20rpx;
  padding-left: 80rpx;
  padding-right: 80rpx;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  box-shadow: 0 2px 2px 0;
  cursor: pointer;
}

.water-btn-bg {
  display: flex;
  justify-content: center;
  align-content: center;
}

.nav {
  background-color: #fff;
  position: absolute;
  bottom: 0;
  width: 100vw;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-content: center;
}

.page-water image {
  /*
  width: 40px;
  height: 50px;
  padding: 10px;
  position: relative;
  top: 5px;
  margin-left: 40px;
  cursor: pointer;
  */
  width: 40 rpx;
  height: 50 rpx;
  position: relative;
  top: 15 rpx;
}

.page-light image {
  width: 40 rpx;
  height: 70 rpx;
  transform: scale(0.7);
  position: relative;
  top: 5 rpx;
  cursor: pointer;
}

.page-home image {
  width: 40 rpx;
  height: 40 rpx;
  position: relative;
  top: 8 rpx;
  padding: 10 rpx;
  margin-right: 40 rpx;
  transform: scale(1.1);
  cursor: pointer;
}

.nav navigator{
  display: flex;
  justify-content: center;
  align-content: center;
  width: 120 rpx;
  height: 100%;
}
